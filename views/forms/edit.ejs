<div class="d-flex justify-content-between align-items-center">
    <div>
        <h2 class="fw-bold fs-3 mb-3">Rút gọn liên kết</h2>
        <p class="fs-6 fw-normal">Công cụ rút ngắn liên kết miễn phí, nhanh nhất.</p>
    </div>

    <a href="/" class="btn btn-primary">Trang chủ</a>
</div>

<div class="d-flex align-items-start gap-3" style="margin-top: 100px;">
    <div class="wrap-table rounded" style="border: 1px solid rgb(235, 235, 235); width: 70%; overflow-x: auto;">
        <table class="table table-bordered mb-0" style="width: 1000px;">
            <thead>
                <tr>
                    <th class="px-3 py-3 fw-bold text-center" style="font-size: 14px; background-color: #F7F9FC;">STT</th>
                    <th class="px-3 py-3 fw-bold text-center" style="font-size: 14px; background-color: #F7F9FC;">Liên kết gốc</th>
                    <th class="px-3 py-3 fw-bold text-center" style="font-size: 14px; background-color: #F7F9FC;">Liên kết rút gọn</th>
                    <th class="px-3 py-3 fw-bold text-center" style="font-size: 14px; background-color: #F7F9FC;">Mật khẩu</th>
                    <th class="px-3 py-3 fw-bold text-center" style="font-size: 14px; background-color: #F7F9FC;">Lượt truy cập</th>
                    <th class="px-3 py-3 fw-bold text-center" style="font-size: 14px; background-color: #F7F9FC;">Thời gian tạo</th>
                    <th class="px-3 py-3 fw-bold text-center" style="font-size: 14px; background-color: #F7F9FC;">Hành động</th>
                </tr>
            </thead>
            
            <tbody>
                <% if (lists && lists.length > 0) { %>
                    <% lists.forEach((list, index) => { %>
                        <tr>
                            <td class="px-3 py-3 text-center align-middle" style="font-size: 11px;"><%= index + 1 %></td>

                            <td class="px-3 py-3 align-middle" style="font-size: 11px; max-width: 150px; overflow-x: auto;">
                                <a href="<%= list.root_url %>" class="text-decoration-none"><%= list.root_url %></a>
                            </td>

                            <td class="px-3 py-3 align-middle" style="font-size: 11px; max-width: 150px; overflow-x: auto;">
                                <a href="<%= list.short_url %>" class="text-decoration-none"><%= list.short_url %></a>
                            </td>

                            <td class="px-3 py-3 text-center align-middle" style="font-size: 11px;">
                                <% if (!list.password) { %>
                                    <p class="m-0 p-0">(Không có)</p>
                                <% } else { %>
                                    <button type="button" class="btn btn-primary" style="font-size: 11px;" data-bs-toggle="modal" data-bs-target="#exampleModal-<%= index %>">
                                        Xem
                                    </button>
                                      
                                    <div class="modal fade" id="exampleModal-<%= index %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Mật khẩu</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body fs-6">
                                                    <%= list.password %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                            </td>

                            <td class="px-3 py-3 text-center align-middle" style="font-size: 11px;"><%= list.access_number %></td>

                            <td class="px-3 py-3" style="font-size: 11px; max-width: 150px;"><%= list.created_at %></td>

                            <td class="px-3 py-3 text-center align-middle" style="font-size: 11px;">
                                <a href="<%= `/edit/${ list.custom_path }` %>" class="table-button me-1" style="background-color: rgb(94,114,228);">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white" class="w-6 h-6" style="width: 15px; height: 15px;">
                                        <path d="M21.731 2.269a2.625 2.625 0 0 0-3.712 0l-1.157 1.157 3.712 3.712 1.157-1.157a2.625 2.625 0 0 0 0-3.712ZM19.513 8.199l-3.712-3.712-8.4 8.4a5.25 5.25 0 0 0-1.32 2.214l-.8 2.685a.75.75 0 0 0 .933.933l2.685-.8a5.25 5.25 0 0 0 2.214-1.32l8.4-8.4Z" />
                                        <path d="M5.25 5.25a3 3 0 0 0-3 3v10.5a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3V13.5a.75.75 0 0 0-1.5 0v5.25a1.5 1.5 0 0 1-1.5 1.5H5.25a1.5 1.5 0 0 1-1.5-1.5V8.25a1.5 1.5 0 0 1 1.5-1.5h5.25a.75.75 0 0 0 0-1.5H5.25Z" />
                                    </svg>  
                                </a>

                                <button class="table-button table-button-share me-1" style="background-color: rgb(42,206,137)" data-short-url="<%= list.root_url %>">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white" class="w-6 h-6" style="width: 15px; height: 15px;">
                                        <path fill-rule="evenodd" d="M15.75 4.5a3 3 0 1 1 .825 2.066l-8.421 4.679a3.002 3.002 0 0 1 0 1.51l8.421 4.679a3 3 0 1 1-.729 1.31l-8.421-4.678a3 3 0 1 1 0-4.132l8.421-4.679a3 3 0 0 1-.096-.755Z" clip-rule="evenodd" />
                                    </svg>
                                        
                                </button>

                                <button type="button" class="table-button" style="background-color: rgb(245,54,92);" data-bs-toggle="modal" data-bs-target="#delete-<%= index %>">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white" class="w-6 h-6" style="width: 15px; height: 15px;">
                                        <path fill-rule="evenodd" d="M16.5 4.478v.227a48.816 48.816 0 0 1 3.878.512.75.75 0 1 1-.256 1.478l-.209-.035-1.005 13.07a3 3 0 0 1-2.991 2.77H8.084a3 3 0 0 1-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 0 1-.256-1.478A48.567 48.567 0 0 1 7.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 0 1 3.369 0c1.603.051 2.815 1.387 2.815 2.951Zm-6.136-1.452a51.196 51.196 0 0 1 3.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 0 0-6 0v-.113c0-.794.609-1.428 1.364-1.452Zm-.355 5.945a.75.75 0 1 0-1.5.058l.347 9a.75.75 0 1 0 1.499-.058l-.346-9Zm5.48.058a.75.75 0 1 0-1.498-.058l-.347 9a.75.75 0 0 0 1.5.058l.345-9Z" clip-rule="evenodd" />
                                    </svg> 
                                </button>
                                
                                <div class="modal fade" id="delete-<%= index %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="exampleModalLabel">Thông báo xóa đường dẫn!</h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p class="m-0 p-0" style="font-size: 14px;">Xác nhận xóa đường dẫn "<%= list.short_url %>"</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                <form action="<%= `/delete/${ list.custom_path }` %>" method="post">
                                                    <button class="btn btn-primary">Xóa</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="7" class="px-3 py-3" style="font-size: 11px;">Danh sách rỗng</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <div class="rounded p-4" style="border: 1px solid rgb(235, 235, 235); width: 30%;">
        <form action="<%= `/edit/${ list.custom_path }` %>" method="post" class="w-100">
            <div class="d-flex flex-column mb-3">
                <label class="fw-semibold mb-2" style="font-size: 14px;">Liên kết mục tiêu</label>
                <input type="text" class="form-control" value="<%= list.root_url %>" style="font-size: 14px;" disabled>
            </div>
        
            <div class="d-flex flex-column mb-3">
                <label class="fw-semibold mb-2" style="font-size: 14px;">Liên kết rút gọn</label>
                <input type="text" class="form-control" value="<%= list.short_url %>"  style="font-size: 14px;" disabled>
            </div>
        
            <div class="d-flex flex-column mb-3">
                <label class="fw-semibold mb-2" style="font-size: 14px;">Mật khẩu (tùy chọn)</label>
                <input type="text" class="form-control" placeholder="Nhập mật khẩu để mở khóa" name="password" value="<%= list.password ? list.password : '' %>" style="font-size: 14px;"> 
            </div>
        
            <button type="submit" class="btn btn-primary w-100">Lưu lại</button>
        </form>
    </div>
</div>